<h2>Login</h2>

<div class="row">
    <div class="col-md-8">
        <section>
            @{ 
                if (Convert.ToBoolean(ViewBag.LoginFail))
                {
                    <div class="alert alert-primary" role="alert">
                        The e-mail and/or password entered is invalid.
                    </div>
                }
            }

            <form asp-controller="Account" asp-action="Login" asp-route-returnurl="/Customer" method="post" class="form-horizontal" role="form">
                <div class="form-group">
                    <label class="col-md-2 control-label">User</label>
                    <div class="col-md-10">
                        <input type="text" name="email" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label">Password</label>
                    <div class="col-md-10">
                        <input type="password" name="password" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-default">Log in</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>